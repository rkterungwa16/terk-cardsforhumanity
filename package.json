{
  "name": "terk-cardsforhumanity",
  "version": "1.0.0",
  "description": "cards for humanity game with express, typescript and react",
  "main": "index.js",
  "scripts": {
    "start:dev:server": "nodemon",
    "start": "cross-env NODE_ENV=production node simple-server.js",
    "start:dev:client": "vite",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "fix:lint": "tslint --fix -p tsconfig.json",
    "test": "jest",
    "test:unit": "jest test/unit --no-cache --ts-config=tsconfig.jest.json",
    "test:integration": "jest test/integration --no-cache --ts-config=tsconfig.jest.json",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkterungwa16/terk-cardsforhumanity.git"
  },
  "keywords": [
    "cards",
    "for",
    "humanity",
    "games",
    "cards"
  ],
  "author": "Terungwa Kombol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rkterungwa16/terk-cardsforhumanity/issues"
  },
  "homepage": "https://github.com/rkterungwa16/terk-cardsforhumanity#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "hbs": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.20.0",
    "sirv": "^3.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hbs": "^4.0.5",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@vitejs/plugin-react": "^5.0.2",
    "jest": "^30.1.1",
    "jest-environment-node": "^30.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
